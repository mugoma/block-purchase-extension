{
  "manifest_version": 3,
  "name": "Block Purchase",
  "description": "Block the immediate purchase of products",
  "version": "1.0",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*"
      ],
      "js": [
        "scripts/utils.js",
        "scripts/amazon.js"
      ]
    }
  ],
  "web_accessible_resources": []
}